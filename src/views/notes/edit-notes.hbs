<link rel="stylesheet" href="..\..\css\main.css">
{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT"/>
                <div>
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}" autofocus/>
                </div>
                <div>
                   <textarea name="description" cols="30" rows="10" class="form-control" placeholder="Description">{{note.description}}</textarea>
                </div>
                <div class="d-grid gap-2">
                    <button type="button submit" class="btn  btn-primary">Base class</button>
                </div>
            </form>
        </div>
    </div>
</div>